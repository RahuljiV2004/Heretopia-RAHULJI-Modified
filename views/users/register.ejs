<% layout('layout/boilerplate') %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Poppins', sans-serif;
                background: linear-gradient(135deg, #6a82fb, #fc5c7d);
                /* Updated gradient */
                color: #343a40;
            }

            .container {
                max-width: 900px;
                margin: 0 auto;
                padding: 30px;
                animation: fadeIn 0.5s ease-in-out;
            }

            h1 {
                font-weight: 600;
                margin-bottom: 30px;
                text-align: center;
                color: #fc5c7d;
            }

            .card {
                border: none;
                border-radius: 20px;
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
                background-color: #fff;
                position: relative;
                overflow: hidden;
                padding: 2rem;
            }

            .circle-design {
                position: absolute;
                border-radius: 50%;
                opacity: 0.2;
                z-index: 0;
                /* Positioned behind the content */
            }

            .circle1 {
                top: -70px;
                right: -70px;
                width: 250px;
                height: 250px;
                background: linear-gradient(135deg, #fc5c7d, #6a82fb);
            }

            .circle2 {
                bottom: -70px;
                left: -70px;
                width: 250px;
                height: 250px;
                background: linear-gradient(135deg, #6a82fb, #fc5c7d);
            }

            .form-label {
                font-weight: 500;
                color: #555;
            }

            .form-control {
                border: 1px solid #ddd;
                border-radius: 8px;
                padding: 12px;
                font-size: 1.1em;
                transition: all 0.3s ease;
                position: relative;
                /* Maintain position for input */
                z-index: 1;
                /* Position in front of the circles */
            }

            .form-control:focus {
                outline: none;
                border-color: #fc5c7d;
                box-shadow: 0 0 12px rgba(252, 92, 125, 0.4);
            }

            .btn-success {
                background-color: #fc5c7d;
                border: none;
                border-radius: 25px;
                padding: 15px;
                font-weight: 600;
                transition: background-color 0.3s, transform 0.2s;
                font-size: 1.2em;
                width: 100%;
                color: white;
            }

            .btn-success:hover {
                background-color: #6a82fb;
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(252, 92, 125, 0.4);
            }

            .img-fluid {
                border-radius: 20px;
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s;
                z-index: 1;
            }

            .img-fluid:hover {
                transform: scale(1.05);
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                }

                to {
                    opacity: 1;
                }
            }
        </style>
        <title>Register</title>
    </head>

    <body>
        <div class="container mt-5">
            <div class="card position-relative">
                <div class="circle-design circle1"></div>
                <div class="circle-design circle2"></div>
                <div class="row">
                    <!-- Register Form -->
                    <div class="col-md-6">
                        <h1>Register</h1>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <button type="submit" class="btn btn-success">Register</button>
                        </form>
                    </div>

                    <!-- Image Section -->
                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                        <img src="https://i.pinimg.com/736x/c4/58/58/c45858a9fcefb8f4e5eec6a99819b1b3.jpg" alt="Register Image" class="img-fluid"
                            style="max-height: 50vh; width: 80%;">
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </body>